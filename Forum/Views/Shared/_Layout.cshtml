<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><img  id="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/02/Stack_Overflow_logo.svg/2000px-Stack_Overflow_logo.svg.png" alt="Stack Overflow" height="32" /></li>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <li>@Html.ActionLink("Questions", "Index", "Home")</li>
                    <li>@Html.ActionLink("Jobs", "About", "Home")</li>
                    <li>@Html.ActionLink("Documentation", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Tags", "Contact", "Home")</li>
                            <div id="custom-search-input">
                                <div id="search" class="input-group col-md-3">
                                    <input type="text" class="  search-query form-control" placeholder="Search" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-danger" type="button">
                                            <span class=" glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                    <img class="questionMark" src="https://www.ucbankmn.com/assets/content/mvOIrfMC/2016/07/29/icon_lg_questionmark.png" alt="Question" height="30"/>
                    <img class="bubble" src="https://d2i2zd9axwkr7h.cloudfront.net/img/speech-bubbles.png" alt="Alternate Text" height="30" />
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Stack Overflow</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
